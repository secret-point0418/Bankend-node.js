{
	"presets": [
		"@babel/preset-env",
		"@babel/preset-react",
		"@babel/preset-typescript"
	],
	"plugins": [
		"react-hot-loader/babel",
		"@babel/plugin-proposal-class-properties",
		[
			"babel-plugin-styled-components",
			{
				"pure": true,
				"minify": true
			}
		]
	],
	"env": {
		"production": {
			"presets": ["minify"]
		}
	}
}
